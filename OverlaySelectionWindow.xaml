<Window x:Class="FastScreeny.OverlaySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        Background="#01000000" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="Manual" Width="800" Height="600" Opacity="1">
    <Canvas x:Name="CanvasRoot">
        <Rectangle x:Name="SelectionRect" Stroke="#5B8DEF" StrokeThickness="2" Fill="Transparent" Visibility="Collapsed"/>
        <TextBlock x:Name="Hint" Foreground="Black" FontSize="14" Margin="16" Background="White" Padding="8,4" Opacity="0.8">
            Drag to select area, Enter to confirm, Esc to cancel
        </TextBlock>
    </Canvas>
</Window>


