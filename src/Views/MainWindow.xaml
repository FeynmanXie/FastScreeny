<Window x:Class="FastScreeny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FastScreeny" Height="300" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Visibility="Collapsed"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <Window.Resources>
        <!-- 现代化渐变背景 -->
        <LinearGradientBrush x:Key="ModernGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a1f3a" Offset="0"/>
            <GradientStop Color="#2d1b69" Offset="0.5"/>
            <GradientStop Color="#0f172a" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 玻璃效果背景 -->
        <SolidColorBrush x:Key="GlassBackground" Color="#E6000000" Opacity="0.9"/>
        
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7b8aff" Offset="0"/>
                                            <GradientStop Color="#8b5fbf" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="16" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.Background>
                <StaticResource ResourceKey="ModernGradient"/>
            </Grid.Background>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="12,12,0,0" Padding="24,16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="#00ff88" Margin="0,0,8,0"/>
                    <TextBlock Text="FastScreeny" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="●" Foreground="#00ff88" FontSize="16" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- 主要内容 -->
            <StackPanel Grid.Row="1" Margin="24,20" VerticalAlignment="Center">
                <Border Background="#20FFFFFF" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Application Running" Foreground="White" FontSize="16" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Right-click tray icon to access settings, capture or exit" Foreground="#b4c6fc" FontSize="12" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- 快捷操作按钮 -->
                <Button Content="📷 Quick Screenshot" Style="{StaticResource ModernButton}" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- 底部状态 -->
            <Border Grid.Row="2" Background="#15FFFFFF" CornerRadius="0,0,12,12" Padding="16,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Ellipse Width="6" Height="6" Fill="#00ff88" Margin="0,0,6,0"/>
                    <TextBlock Text="Running in background" Foreground="#a5b4fc" FontSize="11"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


