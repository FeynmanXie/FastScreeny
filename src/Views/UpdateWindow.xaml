<Window x:Class="FastScreeny.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Software Update" Height="560" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Icon="/assets/icons/favicon.ico">
    
    <Window.Resources>
        <!-- 现代化渐变背景 -->
        <LinearGradientBrush x:Key="UpdateGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1e293b" Offset="0"/>
            <GradientStop Color="#334155" Offset="0.5"/>
            <GradientStop Color="#0f172a" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 卡片背景 -->
        <SolidColorBrush x:Key="CardBackground" Color="#1e293b" Opacity="0.9"/>
        
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3b82f6" Offset="0"/>
                        <GradientStop Color="#1d4ed8" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#60a5fa" Offset="0"/>
                                            <GradientStop Color="#2563eb" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 次要按钮样式 -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6b7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9ca3af"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 危险按钮样式 -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#dc2626" Offset="0"/>
                        <GradientStop Color="#991b1b" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ef4444" Offset="0"/>
                                <GradientStop Color="#b91c1c" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#20000000" CornerRadius="16" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="8" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid Background="{StaticResource UpdateGradient}" ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 自定义标题栏 -->
            <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="16,16,0,0" Padding="24,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#10b981" CornerRadius="6" Padding="8,4" Margin="0,0,12,0">
                            <TextBlock Text="🔄" Foreground="White" FontSize="14"/>
                        </Border>
                        <TextBlock Text="Software Update" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Background="Transparent" Foreground="#9ca3af" 
                            BorderThickness="0" FontSize="16" Padding="8" Click="LaterButton_Click"/>
                </Grid>
            </Border>

            <!-- 主要内容区域 -->
            <ScrollViewer Grid.Row="1" Margin="24,16,24,16" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 新版本可用卡片 -->
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="🎉 New Version Available" Foreground="#f8fafc" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            
                            <!-- 版本信息对比 -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 当前版本 -->
                                <Border Grid.Column="0" Background="#374151" CornerRadius="8" Padding="16">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Current Version" Foreground="#9ca3af" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="CurrentVersionText" Text="1.0.0" Foreground="#f9fafb" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 箭头 -->
                                <TextBlock Grid.Column="1" Text="→" Foreground="#3b82f6" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="16,0"/>
                                
                                <!-- 最新版本 -->
                                <Border Grid.Column="2" Background="#059669" CornerRadius="8" Padding="16">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Latest Version" Foreground="#dcfce7" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="LatestVersionText" Text="1.0.1" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
        </Grid>

                            <!-- 详细信息 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                                    <TextBlock Text="Release Date" Foreground="#94a3b8" FontSize="12"/>
                                    <TextBlock x:Name="PublishDateText" Text="2025-01-01" Foreground="#e2e8f0" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                                    <TextBlock Text="File Size" Foreground="#94a3b8" FontSize="12"/>
                                    <TextBlock x:Name="FileSizeText" Text="10 MB" Foreground="#e2e8f0" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
        </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- 更新说明卡片 -->
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="📝 Release Notes" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <Border Background="#1f2937" CornerRadius="8" Padding="16">
                                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="ReleaseNotesText" 
                                               Text="Loading release notes..." 
                                               Foreground="#d1d5db"
                                               TextWrapping="Wrap"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               LineHeight="18"/>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- 下载进度卡片 -->
                    <Border x:Name="ProgressPanel" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Visibility="Collapsed">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="⬇️ Download Progress" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock x:Name="ProgressText" Text="Preparing download..." Foreground="#cbd5e1" FontSize="13" Margin="0,0,0,8"/>
                            <Border Background="#374151" CornerRadius="6" Height="12">
                                <ProgressBar x:Name="DownloadProgressBar" Background="Transparent" Foreground="#3b82f6" 
                                             Minimum="0" Maximum="100" BorderThickness="0"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- 底部按钮栏 -->
            <Border Grid.Row="2" Background="#15FFFFFF" CornerRadius="0,0,16,16" Padding="24,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" 
                                   Text="Click 'Update Now' to download the new version" 
                                   Foreground="#94a3b8"
                                   FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="DownloadButton" 
                                Content="💾 Update Now" 
                    Style="{StaticResource ModernButton}"
                                MinWidth="100" Margin="0,0,12,0"
                    Click="DownloadButton_Click"/>
            <Button x:Name="LaterButton" 
                                Content="Remind Later" 
                                Style="{StaticResource SecondaryButton}"
                                MinWidth="100" Margin="0,0,12,0"
                    Click="LaterButton_Click"/>
            <Button x:Name="SkipButton" 
                                Content="Skip Version" 
                                Style="{StaticResource DangerButton}"
                                MinWidth="100"
                    Click="SkipButton_Click"/>
        </StackPanel>
                </Grid>
            </Border>
    </Grid>
    </Border>
</Window>
