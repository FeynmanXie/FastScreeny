<Window x:Class="FastScreeny.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FastScreeny Settings" Height="480" Width="680"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Window.Resources>
        <!-- 现代化渐变背景 -->
        <LinearGradientBrush x:Key="ModernGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0f172a" Offset="0"/>
            <GradientStop Color="#1e293b" Offset="0.3"/>
            <GradientStop Color="#334155" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 卡片背景 -->
        <SolidColorBrush x:Key="CardBackground" Color="#1e293b" Opacity="0.8"/>
        
        <!-- 现代化输入框样式 -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="#f9fafb"/>
            <Setter Property="BorderBrush" Value="#4b5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#60a5fa"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3b82f6"/>
                                <Setter Property="Background" Value="#4b5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3b82f6" Offset="0"/>
                        <GradientStop Color="#1d4ed8" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#60a5fa" Offset="0"/>
                                            <GradientStop Color="#2563eb" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 取消按钮样式 -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6b7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9ca3af"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 现代化复选框样式 -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#e5e7eb"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
        
        <!-- 现代化下拉框样式 -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="#f9fafb"/>
            <Setter Property="BorderBrush" Value="#4b5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    
    <Border Background="#20000000" CornerRadius="12" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="8" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid Background="{StaticResource ModernGradient}" ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <!-- 自定义标题栏 -->
            <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="12,12,0,0" Padding="24,16">
                <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8" Fill="#ef4444" Margin="0,0,6,0"/>
                        <Ellipse Width="8" Height="8" Fill="#f59e0b" Margin="0,0,6,0"/>
                        <Ellipse Width="8" Height="8" Fill="#10b981" Margin="0,0,16,0"/>
                        <TextBlock Text="FastScreeny Settings" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Background="Transparent" Foreground="#9ca3af" 
                            BorderThickness="0" FontSize="16" Padding="8" Click="Cancel_Click"/>
                </Grid>
            </Border>
            <!-- 主要内容区域 -->
            <ScrollViewer Grid.Row="1" Margin="24,16,24,16" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 基本设置卡片 -->
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="📁 Basic Settings" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Save Directory" Foreground="#cbd5e1" FontSize="13" Margin="0,0,0,6"/>
                                <DockPanel Grid.Row="1">
                                    <Button DockPanel.Dock="Right" Content="Browse" Style="{StaticResource SecondaryButton}" 
                                            Margin="12,0,0,0" MinWidth="80" Click="Browse_Click"/>
                                    <TextBox x:Name="SavePathBox" Style="{StaticResource ModernTextBox}"/>
                                </DockPanel>
                            </Grid>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="File Naming Format" Foreground="#cbd5e1" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Grid.Row="1" x:Name="FileNamePatternBox" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Grid.Row="2" Text="Example: screenshot_{yyyyMMdd_HHmmss}.png" 
                                          Foreground="#64748b" FontSize="11" Margin="0,4,0,0"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Region Screenshot Hotkey" Foreground="#cbd5e1" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Grid.Row="1" x:Name="HotkeyRegionBox" Style="{StaticResource ModernTextBox}" MinWidth="300" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="2" Text="Example: Ctrl+Alt+A" 
                                          Foreground="#64748b" FontSize="11" Margin="0,4,0,0"/>
                            </Grid>
            </StackPanel>
        </Border>

                    <!-- 行为设置卡片 -->
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="⚙️ Behavior Settings" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="AutoCopyCheck" Content="Auto-copy to clipboard after screenshot" Style="{StaticResource ModernCheckBox}"/>
                            <CheckBox x:Name="LaunchOnStartupCheck" Content="Launch on startup" Style="{StaticResource ModernCheckBox}"/>
                            <CheckBox x:Name="DefaultOpenInEditorCheck" Content="Default to editor mode (otherwise save directly)" Style="{StaticResource ModernCheckBox}"/>
                </StackPanel>
                    </Border>
                    
                    <!-- 自动更新卡片 -->
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="🔄 Auto Update" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="AutoCheckUpdatesCheck" Content="Automatically check for updates" Style="{StaticResource ModernCheckBox}"/>
                            
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Check interval (hours)" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox Grid.Column="1" x:Name="UpdateIntervalBox" Style="{StaticResource ModernTextBox}"/>
                            </Grid>
                            
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Last check time:" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" x:Name="LastUpdateCheckText" Text="Never" Foreground="#e2e8f0" VerticalAlignment="Center"/>
                            </Grid>
                </StackPanel>
                    </Border>
                    
                    <!-- 边框设置卡片 -->
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="🖼️ Border Settings" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            <TextBlock Text="Add non-intrusive gradient border to screenshots" Foreground="#94a3b8" FontSize="12" Margin="0,0,0,12"/>
                            
                            <CheckBox x:Name="EnableBorderCheck" Content="Enable gradient border" Style="{StaticResource ModernCheckBox}"/>
                            
                            <Grid Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Preset" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <ComboBox Grid.Column="1" x:Name="BorderPresetBox" Style="{StaticResource ModernComboBox}"/>
                            </Grid>
                            
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Border Thickness (px)" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox Grid.Column="1" x:Name="BorderThicknessBox" Style="{StaticResource ModernTextBox}"/>
                            </Grid>
                            
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Gradient Start Color" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" x:Name="BorderStartColorBox" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Grid.Column="2" Text="End Color" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="16,0,8,0"/>
                                <TextBox Grid.Column="3" x:Name="BorderEndColorBox" Style="{StaticResource ModernTextBox}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- 管理员权限卡片 -->
                    <Border Background="#dc2626" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="#dc2626" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="🔐 Administrator Privileges" Foreground="#fff1f1" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            <TextBlock Text="Enable advanced features with administrator privileges" Foreground="#fecaca" FontSize="12" Margin="0,0,0,16"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Current Status:" Foreground="#fecaca" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock x:Name="AdminStatusText" Text="User Mode" Foreground="#fee2e2" FontWeight="Bold" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <Button x:Name="RequestAdminBtn" Content="[Admin] Request Administrator Privileges" 
                                    Background="#b91c1c" Foreground="White" BorderThickness="0" 
                                    Padding="16,12" FontSize="13" FontWeight="Medium"
                                    Margin="0,0,0,12" Click="RequestAdmin_Click">
                                <Button.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                </Button.Effect>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#991b1b"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <StackPanel x:Name="AdminFeaturesPanel" Visibility="Collapsed">
                                <Button x:Name="DetectResolutionBtn" Content="[Monitor] Detect &amp; Adjust Resolution" 
                                        Background="#059669" Foreground="White" BorderThickness="0" 
                                        Padding="16,10" FontSize="13"
                                        Margin="0,0,0,8" Click="DetectResolution_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="8"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#047857"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                
                                <TextBlock x:Name="LastDetectionText" Text="Resolution detection: Never performed" 
                                          Foreground="#fecaca" FontSize="11" Margin="0,8,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Text="⚠️ UAC elevation will occur once when requesting privileges" 
                                      Foreground="#fecaca" FontSize="11" FontStyle="Italic" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 开发者面板 (初始隐藏) -->
                    <Border x:Name="DeveloperPanel" Background="#2d1b69" CornerRadius="12" Padding="20" Margin="0,0,0,16" Visibility="Collapsed">
                        <Border.Effect>
                            <DropShadowEffect Color="#7c3aed" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="🔧 Developer Tools" Foreground="#f8fafc" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            <TextBlock Text="Advanced diagnostic and debugging tools" Foreground="#a78bfa" FontSize="12" Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="System Info:" Foreground="#cbd5e1" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" x:Name="SystemInfoText" Text="Loading..." Foreground="#e2e8f0" TextWrapping="Wrap"/>
                            </Grid>
                            
                            <Button x:Name="CreateResolutionScriptBtn" Content="Create Resolution Detection Script" 
                                    Style="{StaticResource ModernButton}" Margin="0,12,0,0" Click="CreateResolutionScript_Click"/>
                            
                        </StackPanel>
                    </Border>
            </StackPanel>
        </ScrollViewer>

            <!-- 底部按钮栏 -->
            <Border Grid.Row="2" Background="#15FFFFFF" CornerRadius="0,0,12,12" Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Style="{StaticResource ModernButton}" MinWidth="100" Margin="0,0,12,0" Click="Save_Click"/>
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" MinWidth="100" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>


