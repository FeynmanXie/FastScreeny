<Window x:Class="FastScreeny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FastScreeny" Height="240" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Visibility="Collapsed">
    <Grid Background="#0F1115">
        <StackPanel Margin="20" >
            <TextBlock Text="FastScreeny is running" Foreground="White" FontSize="18" Margin="0,0,0,12"/>
            <TextBlock Text="Right-click the tray icon to access settings, capture screenshots, or exit." Foreground="#9AA4B2"/>
        </StackPanel>
    </Grid>
</Window>


