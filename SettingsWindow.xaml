<Window x:Class="FastScreeny.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FastScreeny Settings" Height="420" Width="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#0F1115">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#151821" Padding="16">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="FastScreeny Settings" Foreground="White" FontSize="18" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="16" Orientation="Vertical">
                <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                    <TextBlock Text="Save Directory" Foreground="#9AA4B2"/>
                    <DockPanel>
                        <TextBox x:Name="SavePathBox" MinWidth="360" Margin="0,0,8,0"/>
                        <Button Content="Browse" Click="Browse_Click"/>
                    </DockPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                    <TextBlock Text="File Naming Format" Foreground="#9AA4B2"/>
                    <TextBox x:Name="FileNamePatternBox" MinWidth="360"/>
                    <TextBlock Text="Example: screenshot_{yyyyMMdd_HHmmss}.png" Foreground="#6B7280"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                    <TextBlock Text="Region Screenshot Hotkey" Foreground="#9AA4B2"/>
                    <TextBox x:Name="HotkeyRegionBox" MinWidth="240"/>
                    <TextBlock Text="Example: Ctrl+Alt+A" Foreground="#6B7280"/>
                </StackPanel>

                <CheckBox x:Name="AutoCopyCheck" Content="Auto-copy to clipboard after screenshot" Foreground="#E5E7EB"/>
                <CheckBox x:Name="LaunchOnStartupCheck" Content="Launch on startup" Foreground="#E5E7EB"/>
                <CheckBox x:Name="DefaultOpenInEditorCheck" Content="Default to editor mode (otherwise save directly)" Foreground="#E5E7EB"/>

                <Separator Margin="0,16,0,12"/>
                <TextBlock Text="Border (non-intrusive, drawn around content)" Foreground="#9AA4B2" Margin="0,0,0,6"/>
                <CheckBox x:Name="EnableBorderCheck" Content="Enable gradient border" Foreground="#E5E7EB"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Preset" Foreground="#9AA4B2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="BorderPresetBox" Width="220"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Border Thickness (px)" Foreground="#9AA4B2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="BorderThicknessBox" Width="96"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Gradient Start Color" Foreground="#9AA4B2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="BorderStartColorBox" Width="140"/>
                    <TextBlock Text="  End Color" Foreground="#9AA4B2" VerticalAlignment="Center" Margin="12,0,8,0"/>
                    <TextBox x:Name="BorderEndColorBox" Width="140"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#151821" Padding="12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="96" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Cancel" Width="96" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>


